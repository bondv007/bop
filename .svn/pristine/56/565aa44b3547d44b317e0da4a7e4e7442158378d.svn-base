					$content = $email_content['Emailtemplate']['content'];
					
					$content = str_replace(array('{USERNAME}', '{COACH}', '{RESPONSE}'), array(ucfirst($affiliate['User']['first_name']), $coach['Coach']['first_name']. ' ' . $coach['Coach']['last_name'], 'declined' ), $content);
