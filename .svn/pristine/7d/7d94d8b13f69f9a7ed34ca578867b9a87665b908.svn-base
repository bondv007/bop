<script type="text/javascript">


function get_wod_details(wod_id, ctr, num, division, division_sex)
{	
	$.post('<?php echo $this->webroot; ?>events/get_wod_details', { wod_id: wod_id, ctr: ctr, division: division, division_sex: division_sex}, function(data) {
		
		$('.wod_'+ctr+'_'+num).html(data);
	});
}

function toggle_wod(num)
{
	$('.wod_form_'+num).toggle('slow');
	$('.wod_details_'+num).toggle('slow');
	$('.wod_buttons_'+num).toggle('slow');
	return false;	
}

function remove_wod(num)
{
	$('.new_division_' + num).remove();	
	return false;	
}

function create_custom_wod(ctr, num, division, division_sex)
{
	$('#WodCtr').val(ctr);
	$('#WodNum').val(num);
	$('#WodDivision').val(division);
	$('#WodDivisionSex').val(division_sex);
	$('.custom_wod_popup').show();	
	return false;
}
</script>		
