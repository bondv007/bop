 <script type="text/javascript">
 
 function save_invited_people()
 {
	$('.people_check').each(function(e){
		
		if($(this).is(':checked'))
		{
			if(!$('#invitee_'+this.value).length)
			{
				$('.invited_people_div').html('<input type="hidden" id="invitee_'+ this.value +'" name="data[People][]" value="'+ this.value +'"/>');
				$('.display_people').append('<li class="invites" id="invitee_li_' + this.value + '"> <label> Invitees</label><input type="button" class="invitees" value="' + this.title + '" /><span class="cross" onclick="remove_invitee(' + this.value + ')"></span></li>');
			}
		}
		
	});	
	$('.invite_athlete_box').fadeOut();
	return false;
 }
 
 function remove_invitee(num)
 {
	$('#invitee_'+num).remove();
	$('#invitee_li_'+num).remove();	
 }
 
 function search_people()
 {
	var keyword = $('#search_keyword').val();
	
	$('.loading_div').show();
	$('.people_div').hide();
	$.post('<?php echo $this->webroot; ?>events/get_people',{ keyword: keyword}, function(data) {
		
		$('.people_div').html(data);
		$('.loading_div').hide();
		$('.people_div').show();
		
	});	
	return false;
 }
 </script>   
